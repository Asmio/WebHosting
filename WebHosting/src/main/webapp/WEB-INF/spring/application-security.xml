<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/security 
	http://www.springframework.org/schema/security/spring-security-4.0.xsd
	
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
	
	<http use-expressions="true">
		
		<access-denied-handler error-page="/accessDenied" />
	
	    <intercept-url pattern="/test" access="hasRole('ROLE_ADMIN')" />
	    <intercept-url pattern="/login*" access="hasRole('ROLE_ANONYMOUS')" />
	    <intercept-url pattern="/signup*" access="hasRole('ROLE_ANONYMOUS')" />
	    <intercept-url pattern="/user/*" access="hasAnyRole('ROLE_USER', 'ROLE_ADMIN')" />
	    <intercept-url pattern="/uploadpage*" access="hasAnyRole('ROLE_USER', 'ROLE_ADMIN')" />
	    <intercept-url pattern="/download*" access="hasAnyRole('ROLE_USER', 'ROLE_ADMIN')" />
	    <intercept-url pattern="/webcam" access="hasAnyRole('ROLE_USER')" />
	    <form-login 
	    	login-page='/login'
	    	default-target-url="/"
	    	authentication-failure-url="/login?error=true"
	    	login-processing-url="/j_spring_security_check" />
	    	
	    <logout  logout-url="/j_spring_security_logout" logout-success-url="/login?logout" delete-cookies="JSESSIONID"/>
	    
	    <remember-me />
	</http>
  
	  <authentication-manager>
	        <authentication-provider>
	            <jdbc-user-service data-source-ref="dataSource" 
	            	users-by-username-query="select username,password, enabled from users where username=?"
	            	authorities-by-username-query="select username, role from user_roles where username =?"/>
	            <password-encoder ref="passwordEncoder">
	            </password-encoder>
	            
	        </authentication-provider>
		</authentication-manager>
		
		<beans:bean id="passwordEncoder" class="by.bntu.hosting.utils.MDPasswordEncoder" />
  
</beans:beans>